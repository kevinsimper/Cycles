extends layout

block content
  form(method='post')
    div
      div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        input#email.mdl-textfield__input(type='text', name='email')
        label.mdl-textfield__label(for='email') Email

    div
      div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        input#password.mdl-textfield__input(type='text', name='password')
        label.mdl-textfield__label(for='password') Password
    div
      button.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--colored Login
